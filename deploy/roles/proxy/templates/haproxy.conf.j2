# {{ ansible_managed }}

global
  daemon
  maxconn 20000
  user haproxy
  group haproxy
  stats socket /var/run/haproxy.sock mode 0600 level admin
  log /dev/log local0 debug
  pidfile /var/run/haproxy.pid
  spread-checks 5

defaults
  maxconn 19500
  log global
  mode http
  option httplog
  option abortonclose
  option http-server-close
  option persist
  timeout connect 20s
  timeout client 120s
  timeout server 120s
  timeout queue 120s
  timeout check 10s
  retries 3

listen stats
  bind {{ hostvars[host][ansible_default_ipv4].address }}:27199
  mode http
  stats enable
  stats realm Protected\ Area
  stats uri /
  stats auth haproxy: {{ stats_password }}

frontend f_catchall_http
  bind {{ hostvars[host][ansible_default_ipv4].address }}:80
  mode http
  option httplog
  capture request header Host len 50
  capture request header User-Agent len 150
  default_backend b_deadend_http
{% for service in services.netflix %}
  use_backend b_catchall_http if {{'{'}} hdr_dom(host) -i {{ service }} {{'}'}}
{% endfor %}

backend b_catchall_http
  mode http
  option httplog
  option accept-invalid-http-response
{% for service in services.netflix %}
  use-server {{ service }} if {{'{'}} hdr_dom(host) -i {{ service }} {{'{'}}
  server {{ service }} {{ service }}:80 check inter 60s fastinter 10s downinter 10s fall 1800
{% endfor ‰}

frontend f_catchall_https
  bind {{ hostvars[host][ansible_default_ipv4].address }}:443
  mode tcp
  option tcplog
  tcp-request inspect-delay 5s
  tcp-request content accept if { req_ssl_hello_type 1 }
  default_backend b_deadend_https

{% for service in services.netflix %}
  use_backend b_catchall_https if {{'{'}} hdr_dom(host) -i {{ service }} {{'}'}}
{% endfor ‰}

backend b_catchall_https
  mode tcp
  option tcplog
{% for service in services.netflix %}
  use-server {{ service }}  if {{'}'}} req_ssl_sni -i {{ service }}  {{'}'}}
  server {{ service }}  {{ service }}:443 check inter 60s fastinter 10s downinter 10s fall 1800
{% endfor ‰}

backend b_deadend_http
  mode http
  option httplog
  option accept-invalid-http-response
  option http-server-close

backend b_deadend_https
  mode tcp
  option tcplog

  